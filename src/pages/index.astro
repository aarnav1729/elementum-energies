---
// src/pages/index.astro
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";

// Images
import heroImage from "@images/hero-image.avif";
import featureImage from "@images/features-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import construction from "@images/construction-image.avif";

import { partnersData } from "@/data_files/constants";

const avatarSrcs: string[] = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];

const whyChooseUs = [
  {
    question: "Quality Products",
    answer: "We only offer products that meet strict industry standards, ensuring reliability and longevity.",
  },
  {
    question: "Customer-Centric Service",
    answer: "Our team is dedicated to understanding your needs and providing tailored solutions that save you time and money.",
  },
  {
    question: "Fast & Reliable Delivery",
    answer: "With our robust supply chain, we guarantee fast and reliable delivery for projects of any scale.",
  },
  {
    question: "Competitive Pricing",
    answer: "We offer the best prices without compromising on quality, helping you maintain cost-effective operations.",
  },
];

const features = [
  {
    heading: "Industry Expertise",
    content: "Years of experience delivering products and services that meet the highest standards for safety and efficiency.",
    svg: "check-circle",
  },
  {
    heading: "Wide Product Range",
    content: "Mechanical, electrical, and instrumentation items from reputable manufacturers ensure quality and reliability.",
    svg: "check-circle",
  },
  {
    heading: "Global Reach",
    content: "Supporting sectors around the world with robust supply chain capabilities and reliable distribution networks.",
    svg: "check-circle",
  },
];

---

<MainLayout>
  <HeroSection
    title={`Elementum Energies<br class="hidden sm:block" />
           <span class="text-crimson dark:text-amber">
             Innovative. Reliable. Sustainable.
           </span>`}
    subTitle="Leading provider of industrial solutions for Oil & Gas, Refinery & Petrochemical, Manufacturing, Marine, Mining, Construction, Agriculture, and more."
    primaryBtn="Explore Our Products"
    primaryBtnURL="/products"
    secondaryBtn="Learn About Us"
    secondaryBtnURL="/services"
    withReview={true}
    avatars={avatarSrcs}
    rating={`<span class="font-bold">5.0</span> / 5`}
    starCount={5}
    reviews="Rated Highly by Clients Worldwide"
    src={heroImage}
    alt="Elementum Energies industrial product lineup"
  />

  <ClientsSection
    title="Serving Industries Worldwide"
    subTitle="Elementum Energies supports businesses in Oil & Gas, Refinery & Petrochemical, Manufacturing, Marine, Mining, Construction, and more."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Driving Safety, Efficiency & Sustainability"
    subTitle="Elementum Energies offers cost-effective solutions tailored to the diverse needs of our clients. Partner with us to enhance operational performance in the most demanding environments."
    src={featureImage}
    alt="Elementum Energies product highlights"
    features={features}
  />

  <FeaturesNavs
    title={`Solutions Built for <span class="text-yellow-500 dark:text-yellow-400">Your</span> Industry`}
    tabs={[
      {
        heading: "Diverse Industries",
        content: "From Oil & Gas to Agriculture, we ensure every client’s unique needs are met with top-tier products and services.",
        svg: "tools",
        src: tools,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Efficient Management",
        content: "Manage your supply chain, inventory, and operations seamlessly with our dedicated support and distribution services.",
        svg: "dashboard",
        src: dashboard,
        alt: "An intuitive operations dashboard",
        second: true,
      },
      {
        heading: "Sustainable Future",
        content: "Our commitment to sustainability drives innovation across our product range, ensuring a safer, greener tomorrow.",
        svg: "house",
        src: construction,
        alt: "Construction solutions with emphasis on safety and sustainability",
      },
    ]}
  />

  <TestimonialsSection
    title="Committed to Excellence"
    subTitle="Hear how we’ve helped clients around the globe streamline operations and maintain the highest safety standards."
    testimonials={[
      {
        content:
          "Elementum Energies has transformed our supply chain efficiency. Their prompt delivery and product quality are unmatched in the industry.",
        author: "Amanda Peterson",
        role: "Supply Chain Manager | Global Manufacturing Corp.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=320&h=320&fit=facearea&facepad=2",
      },
    ]}
    statistics={[
      {
        count: "10,000+",
        description: "Clients served across multiple industries worldwide",
      },
      {
        count: "99%",
        description: "Positive client feedback on quality & reliability",
      },
      {
        count: "24/7",
        description: "Support ensuring minimal downtime",
      },
      {
        count: "Top Tier",
        description: "Partners with reputable global manufacturers",
      },
    ]}
  />

  <FAQ
    title="Why Choose<br />Elementum Energies?"
    faqs={{
      subTitle: "Learn more about our dedication to quality and reliability.",
      faqs: whyChooseUs,
    }}
  />

  <HeroSectionAlt
    title="Our Mission & Vision"
    subTitle="Mission: To build long-lasting relationships with our clients based on trust, quality, and performance. Vision: To become the industry’s leading supplier of industrial products, known for our commitment to quality, customer satisfaction, and sustainable practices."
    url="/services"
  />
</MainLayout>