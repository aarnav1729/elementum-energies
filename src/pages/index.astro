---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-3.jpeg";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/hero-2.jpeg";
import construction from "@images/hero-5.jpeg";
import tools from "@images/hero-4.jpeg";
import dashboard from "@images/hero-1.jpeg";
import { partnersData } from "@/data_files/constants";
import deoimg from "@images/v1.jpg"

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>

  <HeroSection
    title=`Empower Your Operations with <span class="text-orange-500 dark:text-orange-400">Elementum Energies LLC</span>`
    subTitle="Innovative, reliable industrial solutions tailored for your operational needs."
    primaryBtn="Explore Our Solutions"
    primaryBtnURL="/products"
    secondaryBtn="Contact Us"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews={`Trusted by over <span class="font-bold">12.8k</span> clients`}
    src={heroImage}
    alt="Display of Elementum Energies industrial products"
  />

  <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by top industrial partners."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Delivering Industrial Excellence"
    subTitle="At Elementum Energies LLC, we overcome the challenges of modern industry with innovative solutions and exceptional service. Our products and services are engineered to drive efficiency and safety in every application."
    src={featureImage}
    alt="Showcase of Elementum Energies industrial solutions"
    features={features}
  />

  <FeaturesNavs
    title=`Customize <span class="text-yellow-500 dark:text-yellow-400">Elementum Energies LLC</span>' offerings to perfectly suit your industrial requirements.`
    tabs={[
      {
        heading: "Robust Industrial Products",
        content:
          "Empower your operations with our advanced industrial solutions, designed for durability and peak performance in challenging environments.",
        svg: "tools",
        src: tools,
        alt: "High-quality industrial equipment on display",
        first: true,
      },
      {
        heading: "Integrated Management Systems",
        content:
          "Seamlessly oversee your operations with our intuitive management systems, providing clear insights and effective control.",
        svg: "dashboard",
        src: dashboard,
        alt: "Graphic representation of industrial dashboards",
        second: true,
      },
      {
        heading: "Reliable Performance",
        content:
          "Experience unparalleled efficiency and consistency with our cutting-edge features designed to meet rigorous industrial demands.",
        svg: "house",
        src: construction,
        alt: "Modern industrial facility infrastructure",
      },
    ]}
  />

  <TestimonialsSection
    title="Accelerate Your Operations"
    subTitle="At Elementum Energies LLC, our prompt service and expert solutions empower you to achieve operational efficiency from day one."
    testimonials={[
      {
        content:
          "Elementum Energies LLC significantly boosted our operational efficiency. Their reliable solutions and expert support transformed our processes and delivered outstanding results.",
        author: "Samantha Ruiz",
        role: "Chief Operating Officer | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "industrial clients served across diverse sectors",
      },
      {
        count: "35%",
        description:
          "increase in operational efficiency reported by our customers",
      },
      {
        count: "15.3%",
        description:
          "reduction in maintenance costs through our innovative solutions",
      },
      {
        count: "2x",
        description: "quicker turnaround with our robust supply chain",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build the Future Together"
    subTitle="Discover how Elementum Energies LLC is driving industrial innovation through advanced solutions and exceptional service."
    url="/contact"
  />
</MainLayout>
