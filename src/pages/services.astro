---
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";


// Images (use whichever you like or replace with brand-specific images)
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

import { SITE } from "@data/constants";

// Adapt the page title
const pageTitle: string = `Services | Elementum Energies`;

// Articles array reflecting client’s general services approach
interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Comprehensive Consultation & Guidance",
    subTitle:
      "Whether you’re operating in Oil & Gas, Manufacturing, or Construction, our experts provide personalized advice on product selection, compliance, and best practices, ensuring your operations run smoothly and efficiently.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with industrial plans",
    imgTwo: personWorking,
    imgTwoAlt: "Team member reviewing designs in an office setting",
  },
  {
    isRightSection: false,
    title: "Precision & Excellence in Execution",
    subTitle:
      "From small installations to large-scale industrial operations, our construction and implementation teams bring expertise, reliability, and top-quality materials to every project.",
    img: beforeAfter,
    imgAlt: "Before and after industrial setup transformation",
    btnExists: true,
    btnTitle: "Explore Our Products",
    btnURL: "/products",
  },
  {
    isRightSection: true,
    title: "Project Management & Supply Chain Optimization",
    subTitle:
      "We handle resource allocation, workflow coordination, and stakeholder communication, ensuring projects meet deadlines and remain within budget. Elementum Energies’ supply chain solutions guarantee fast, reliable delivery for projects of any scale.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of a managed industrial site",
  },
  {
    isRightSection: false,
    title: "Ongoing Maintenance & After-Sales Support",
    subTitle:
      "Elementum Energies stands by our commitment to excellence well beyond project completion. Our team provides dedicated maintenance, emergency assistance, and comprehensive after-sales support to ensure long-lasting performance and safety.",
    img: usingTools,
    imgAlt: "Worker in safety vest holding a power tool",
  },
  {
    isRightSection: true,
    title: "Tailored Enterprise Solutions",
    subTitle:
      "For large-scale and specialized industrial needs, we craft bespoke strategies that streamline your operations, reduce costs, and prioritize safety and sustainability at every stage.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In-progress building structure or large-scale facility",
    imgTwo: underConstruction,
    imgTwoAlt: "Industrial site under active construction",
    btnExists: true,
    btnTitle: "Contact Our Team",
    btnURL: "/contact",
  },
];
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://elementumenergies.com/services",
    "url": "https://elementumenergies.com/services",
    "name": "Services | Elementum Energies",
    "description": "Elementum Energies provides end-to-end industrial services—consultation, supply chain optimization, project management, and after-sales support—to ensure efficient and safe operations.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://elementumenergies.com",
      "name": "Elementum Energies",
      "description": "Your partner for innovative, safe, and cost-effective industrial solutions worldwide.",
    },
    "inLanguage": "en-US",
  }}
>
  <!-- Page Intro -->
  <MainSection
    title="Our Commitment to Excellence"
    subTitle="From project inception to final delivery, Elementum Energies offers comprehensive services that empower clients to maintain safe, efficient, and sustainable operations."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="/contact"
  />

  <!-- Service Descriptions (alternating sections) -->
  {
    articles.map((article) =>
      article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      )
    )
  }

  <!-- Stats Section (optional) -->
  <FeaturesStats
    title="Proven Impact Across Industries"
    subTitle="Our extensive experience and dedication to quality make us the trusted partner for industrial clients worldwide."
    mainStatTitle="95%"
    mainStatSubTitle="client retention rate"
    stats={[
      {
        stat: "10,000+",
        description: "industrial deliveries fulfilled",
      },
      {
        stat: "99.8%",
        description: "on-time project completion",
      },
      {
        stat: "24/7",
        description: "technical and after-sales support",
      },
    ]}
  />
</MainLayout>